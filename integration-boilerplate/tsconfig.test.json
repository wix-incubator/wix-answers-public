{
  "compilerOptions": {
    "outDir": "tests-target",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "target": "es5",
    "lib": [
      "dom",
      "es2016"
    ],
    "types": [
      "mocha",
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.spec.ts"
  ]
}